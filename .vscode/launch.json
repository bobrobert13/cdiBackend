    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch via NPM",
            "program": "${workspaceFolder}/src/server.js",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "debug"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "args": [
                "--port",
                "4000"
            ]
        },
        {
            "name": "Launch Program",
            "program": "${workspaceFolder}/server.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "args": [
                "--port",
                "4000"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch CDI",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/server.js",
            "args": [
                "--port",
                "4000"
            ]
        }
    ]
}